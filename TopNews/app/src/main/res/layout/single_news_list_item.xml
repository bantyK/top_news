<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

    <TextView
            android:id="@+id/news_title"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".7"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            />

    <ImageView
            android:id="@+id/news_thumb"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".25"
            android:layout_height="100dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/news_title"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/news_thumb_content_desc"/>

    <TextView
            android:id="@+id/news_content"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".7"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/news_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:id="@+id/news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/news_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:id="@+id/news_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/news_content"
            app:layout_constraintRight_toRightOf="@id/news_title"
            android:layout_marginEnd="16dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C0C0C0"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/news_duration"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />


</android.support.constraint.ConstraintLayout>